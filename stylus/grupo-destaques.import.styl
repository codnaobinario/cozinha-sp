.grupo-destaques
	.destaque
		col(1/3)
		margin-top: 2em
		.imagem
			overflow: hidden
			width: 8em
			height: 8em
			background-color: transparent
			mask-image: url('/images/bg-circle-mask.svg')
			margin: 0 auto 2em
			&:hover
				animation: tada 1s
			img
				max-width: 100%
				&.h
					max-width: inherit
					max-height: 100%
