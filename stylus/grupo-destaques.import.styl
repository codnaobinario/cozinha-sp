.grupo-destaques
	.destaque
		col(1/3)
		margin-top: 2em
		.imagem
			overflow: hidden
			width: 8em
			height: 8em
			background-color: transparent
			mask-image: url('/images/bg-circle-mask.svg')
			mask-size: 98%
			mask-position: center
			border-radius: 50%
			margin: 0 auto 2em
			transition: all .2s ease-in-out;
			&:hover
				transform: scale(1.5);
			img
				max-width: 100%
				&.h
					max-width: inherit
					max-height: 100%
