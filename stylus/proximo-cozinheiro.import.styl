@keyframes moving-gradient
	0%
		background-position: 100px 0
	100%
		background-position: 0 0

.proximo-cozinheiro .perfil
	.meta-conteudo
		width: 90%
		mask-image: url("/images/bg-destaque-mask.svg");
		mask-position: center center;
		mask-size: cover;
		padding: 50px 0 60px
		margin: -50px auto 10px
		background-color: #D91F5D
		position: relative
		z-index: -1
		p
			width: 80%
			margin: 0 auto 3em;
	.progresso
		center(75%)
		p
			font-weight: 400
			font-size: 2.2em
			line-height: 1em
			margin-bottom: 0
			padding: .2em 0
			span
				font-size: 65%
		.barra
			col(10/12)
			background-image: repeating-linear-gradient(
				135deg,
				rosa,
				rosa .35em,
				rgba(255,255,255,.75) .35em,
				rgba(255,255,255,.75) .4em /* determines size */
			)
			animation-name: moving-gradient
			animation-duration: 7s
			animation-iteration-count: infinite
			animation-timing-function: linear
			.preenchido
				width:30%
				background-color: rosa-escuro
				p
					text-align: right
					font-size: 1.5em
					padding: .5em 1em
		.objetivo
			col(2/12)

.proximo-cozinheiro .doacao
	.planos
		.plano
			position: relative
			z-index: 2
			color: white
			display: inline-block
			width: 5.5em
			height: 5.5em
			margin: 0 1em
			font-size: 1em
			font-weight: 400
			line-height: 5.5em
			vertical-align: middle
			text-decoration: none
			mask-image: url('/images/bg-circle-mask.svg')
			mask-size: 98%
			mask-position: center
			border-radius: 50%
			&.ativo
				line-height: 5.3em
				width: 5.3em
				height: 5.3em
				font-size: 2em
			&:hover
				animation: pulse 1s
			&.outro
				text-transform: uppercase
				font-size: 1em
				line-height: 1em
				padding: 1.5em 0
				width: 5.5em
				height: 5.5em
				&.ativo
					font-size: 1.5em
					padding: 1.3em 1em
					line-height: 1.5em
					width: 7em
					height: 7em

	fieldset
		position: relative
		z-index: 1
		margin: -5em auto 3em
		background-color: white
		mask-image: url('/images/bg-big-poligono-mask.svg')
		mask-size: cover
		width: 90%
		padding: 6em 6em 0
		color: cinza
		legend
			font-weight: 400
			color: cinza
			col(1)
			margin-top: 3em
			margin-bottom: 3em
			text-transform: uppercase
		label
			display: block
			text-align: left
			font-weight: 400
			text-transform: uppercase
			margin: .5em 0
		input
			font-family: Roboto
			color: darken(cinza, 30%)
			&[name=customer_address_street_number],
			&[name=customer_phone_ddd]
				width: 7.5em
			&[name=customer_phone_number]
				width: 10em
			&[name=customer_born_at]
				max-height: 3.3em
		.input
			float: left
			margin: 0 1em 1em 0
		.submit
			width: 100%
			text-align: center
			margin: 3em 0
			input
				color: white
				margin: 0 1em
