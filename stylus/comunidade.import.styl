.comunidade
	.onde-estamos,
	.ultimos-posts
		float: left
		width: 46%
		margin: 0 2% 3em
		.mascara
			position: relative
			height: 37.4em
			background-color: white
			mask-image: url('/images/bg-poligono-mask.svg')
			mask-size: cover
	.onde-estamos
		.shadow,
		img
			left: 0
			width: 570px
			height: 600px
			background: linear-gradient(to bottom, rgba(0,0,0,0) 42%,rgba(0,0,0,0.5) 100%)
			position: absolute
			p
				color: white
				position: absolute
				bottom: 0
				text-align: center
				padding: 2em 0
				width: 100%
				text-shadow: .1em .1em .2em rgb(0,0,0)
		.direitos-autorais
			position: absolute
			z-index: 222
			bottom: 0
			width: 100%
			font-size: .7em
			font-weight: 100
			padding: 1em 0
			margin: 0
			a
				color: white
	.fb-page
		margin: 3em 0 0
